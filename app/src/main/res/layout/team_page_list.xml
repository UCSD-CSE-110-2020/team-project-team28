<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/team_member_initial" />

        <TextView
            android:id="@+id/team_page_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_below="@id/team_member_initial"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/team_member_initial"
            />

        <TextView
            android:id="@+id/team_page_member_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_page_member_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:text="Team Member Email"
            android:textColor="@android:color/holo_purple"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/team_member_initial"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>